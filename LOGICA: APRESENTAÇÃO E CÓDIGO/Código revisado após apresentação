def verificar_selecao(idade, experiencia, habilitacao, cursos_complementares):
    if idade < 18:
        return "Rejeitado: Você deve ter pelo menos 18 anos."
    
    if experiencia < 2:
        return "Rejeitado: Você deve ter pelo menos 2 anos de experiência."

    if habilitacao != "sim":
        return "Rejeitado: Você deve possuir habilitação."

    if cursos_complementares < 1:
        return "Rejeitado: É necessário ter pelo menos um curso complementar."

    if experiencia >= 5 and cursos_complementares >= 3:
        return "Aprovado com distinção: Você possui experiência e qualificação excelentes!"

    if experiencia >= 3:
        return "Aprovado: Você atende aos critérios de experiência."

    return "Aprovado: Você atende aos critérios básicos."

def main():
    try:
        idade = int(input("Digite sua idade: "))
        experiencia = int(input("Digite quantos anos de experiência você tem: "))
        habilitacao = input("Você possui habilitação (sim/não)? ").strip().lower()
        cursos_complementares = int(input("Quantos cursos complementares você tem? "))

        resultado = verificar_selecao(idade, experiencia, habilitacao, cursos_complementares)
        print(resultado)
    except ValueError:
        print("Por favor, insira um valor numérico válido.")

if __name__ == "__main__":
    main()

